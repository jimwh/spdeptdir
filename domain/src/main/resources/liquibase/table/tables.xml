<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- indexing on directory_name -->
    <changeSet author="jh3389" id="table1">
        <createTable schemaName="deptdir" tableName="level1">
            <column name="ID" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>
            <!--
                <constraints unique="true" nullable="false"/>
            -->
            <column name="parent" type="INT"/>
            <column name="tie_line" type="VARCHAR(50)"/>
            <column name="address" type="VARCHAR(50)"/>
            <column name="mail_code" type="VARCHAR(50)"/>
            <column name="phone_type" type="VARCHAR(50)"/>
            <column name="phone_number" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <changeSet author="jh3389" id="createIndex-level1">
        <createIndex catalogName="deptdir"
                     indexName="idx_level1"
                     schemaName="deptdir"
                     tableName="level1"
                     tablespace="A String"
                     unique="false">
            <column name="name" type="VARCHAR(150)"/>
        </createIndex>
    </changeSet>


</databaseChangeLog>